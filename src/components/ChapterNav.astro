---
interface Props {
  bookSlug: string;
  prevChapter?: { slug: string; title: string } | null;
  nextChapter?: { slug: string; title: string } | null;
}

const { bookSlug, prevChapter, nextChapter } = Astro.props;
---

<nav class="chapter-nav">
  {prevChapter ? (
    <a href={`/${bookSlug}/${prevChapter.slug}`}>&larr; Previous</a>
  ) : (
    <span class="nav-hidden">&larr; Previous</span>
  )}

  <a href={`/${bookSlug}`}>Contents</a>

  {nextChapter ? (
    <a href={`/${bookSlug}/${nextChapter.slug}`}>Next &rarr;</a>
  ) : (
    <span class="nav-hidden">Next &rarr;</span>
  )}
</nav>
